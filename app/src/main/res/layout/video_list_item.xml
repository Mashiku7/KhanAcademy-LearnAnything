<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_shape">

    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:textColor="@color/fragment_text"
        android:textStyle="italic" />

    <!--<TextView-->
        <!--android:layout_toRightOf="@id/title"-->
        <!--android:id="@+id/videoCount"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:textSize="14sp"-->
        <!--android:paddingTop="10sp"-->
        <!--android:paddingBottom="10sp"-->
        <!--android:paddingLeft="10sp"-->
        <!--android:paddingRight="10sp"-->
        <!--android:textColor="@color/fragment_text"-->
        <!--android:textStyle="italic" />-->

    <TextView
        android:layout_below="@id/title"
        android:id="@+id/description"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:textColor="@color/description_text" />

    <LinearLayout
        android:layout_below="@id/description"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <TextView
            android:id="@+id/dateAdded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/fragment_text"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginRight="12dp"
            android:textColor="@color/fragment_text"
            android:textStyle="italic" />

    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_imageView"
        android:layout_below="@id/linearLayout"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:paddingTop="14sp"
        android:paddingBottom="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp" />

    <TextView
        android:id="@+id/note"
        android:layout_below="@id/list_item_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:paddingBottom="20sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:textColor="@color/fragment_text" />

</RelativeLayout>